/* pages/personal/personal.wxss */
.indexContainer {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.bgImg {
  width: 100%;
  position: relative;
}

.user {
  position: absolute;
  display: flex;
  left: 20rpx;
  top: 100rpx;
  height: 100rpx;
}

.user image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user text {
  line-height: 100rpx;
}
.card {
  background: rgba(82, 76, 71, 0.5);
  position: absolute;
  top: 250rpx;
  height: 180rpx;
  margin: 0 20rpx;
  width: 670rpx;
  border-radius: 20rpx;
  color: #fcecb9;
  padding: 20rpx;
}
.card .cardImg {
  width: 300rpx;
  height: 200rpx;
  float: right;
  border-radius: 0 20rpx 0 0;
}
.card .cardContent button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  line-height: 44rpx;
  font-size: 20rpx;
  padding: 0rpx 20rpx;
  border-radius: 40rpx;
  background: #fcecb9;
  color: #5b4d43;
}
.card .cardContent .iconfont {
  font-size: 26rpx;
  margin: 20rpx;
}
.card .cardContent .cardName {
  font-size: 26rpx;
  line-height: 30rpx;
}
.card .cardVip {
  margin-top: 40rpx;
  font-size: 30rpx;
}
.card .cardVip text {
  display: inline-block;
}
.card .cardVip .openVip {
  font-size: 26rpx;
}
.content {
  position: absolute;
  top: 452rpx;
  width: 100%;
  height: 650rpx;
}
.mark {
  width: 100%;
  height: 650rpx;
  background: #F5F5F5;
  padding-top: 40rpx;
}
.content image {
  position: absolute;
  top: -50rpx;
  width: 100%;
  height: 50rpx;
}
.content .icons {
  position: absolute;
  top: 0rpx;
  display: flex;
  margin: 20rpx;
  padding: 20rpx 0;
  background: #fff;
  width: 710rpx;
  height: 100rpx;
}
.content .icons view {
  width: 25%;
}

.content .icons text {
  display: inline-block;
  text-align: center;
  font-size: 24rpx;
  width: 100%;
}
.content .icons .iconfont {
  color: #f43373;
  font-size: 50rpx;
  margin-bottom: 10rpx;
}
.content .items {
  position: absolute;
  top: 180rpx;
  margin: 0 20rpx;
  background: #fff;
  width: 710rpx;
}
.content .items text {
  display: block;
  font-size: 26rpx;
  margin-left: 20rpx;
}
.content .items .item {
  height: 100rpx;
  border-top: 1rpx solid #d5d5d5;
  line-height: 102rpx;
}
.content .items .desc {
  font-size: 30rpx;
  line-height: 52rpx;
  margin: 0;
}
.content .items .firstItem {
  margin: 20rpx;
}
