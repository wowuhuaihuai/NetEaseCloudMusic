            <image class="/cardImg" src="/static/images/personal/vip-card-bg.png"></image>
            <view class="cardContent">
                <text class="icon iconfont iconhuangguan"></text>
                <text class="cardName">风起会员</text>
                <button>立即开通</button>
            </view>
            <view class="cardVip">
                <text>atguigu Union</text>
