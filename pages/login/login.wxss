/* pages/login/login.wxss */
.title{
    display: inline-block;
    margin: 40rpx 20rpx;
    font-size: 40rpx;
    color: #9B9999;
}

.box{
    width: 100%;
}
.box .item{
    width: 80%;
    font-size: 26rpx;
    margin:40rpx auto;
    padding: 10rpx 30rpx;
    background: #F9F8FD;
}
.box .item text{
    display: inline-block;
    margin-bottom: 10rpx;
    color: #9B9999;
}
button{
    width: 88%;
    font-size: 30rpx;
    margin:80rpx auto;
    margin-bottom: 30rpx;
    background: #D23334;
    color: #FFF;
    height: 76rpx;
    border-radius: 76rpx;
}
.forgetPassword{
    display: inline-block;
    width: 100%;
    font-size: 28rpx;
    text-align: center;
    color: #46A3F5;
}
.footer{
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 40rpx;
    color: #9B9999;
}
.footer .register{
    color: #46A3F5;
}