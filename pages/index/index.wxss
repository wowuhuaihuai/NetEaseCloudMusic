/* pages/index/index.wxss */
.binners{
  width: 100%;
  height: 300rpx;
}

.binners image{
  width: 100%;
  height: 100%;
}

.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  width: 20%;
  text-align: center;
}

.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  background: rgb(240,19,19);
  border-radius: 50%;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  margin: 20rpx auto;
}

.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲样式 */


/* 推荐内容区 */
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-left: 20rpx;
}
.scrollItem :last-of-type{
  margin-right: 20rpx;
}

.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 ... */
  /* display: block;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis; */
    /* 多行文本溢出隐藏 ... */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    /* 设置对齐方式 */
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

/* 排行榜 */
.topListSwiper{
  margin: 20rpx;
  height: 500rpx;
}
/* 排行榜内容区 */
.swiperItem{
  width: 96%;
  background: #FBFBFB;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem{
  display: flex;
  margin-top: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
}